<%- layout("layouts/boilerplate.ejs") %>
  <div class="new">
      <img class="form-img" src="https://source.unsplash.com/random/?house_in_nature" alt="image">
        <div class="form-input cols-1">
            <form action="/listings" method="POST" novalidate class="needs-validation">
                <h1 class="head-new">Add New Listings</h1>
                <div class="mb-2">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" placeholder="title" name="listing[title]" class="form-control" required>
                    <div class="invalid-feedback">
                        Enter Title
                      </div>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                <div class="mb-1 ">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
                    <div class="invalid-feedback">
                        Enter Description
                      </div>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                <div class="mb-2">
                    <label for="image" class="form-label">Image</label>
                    <input type="text" name="listing[image]" placeholder="Enter Image URL" class="form-control">
                </div>
                <div class="row ">
                    <div class="mb-2 col-md-6">
                        <label for="price" class="form-label">Price</label>
                        <input type="text" name="listing[price]" placeholder="Enter Price" class="form-control" required>
                        <div class="invalid-feedback">
                            Enter Price
                          </div>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                    <div class="mb-2 col-md-6">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" placeholder="Enter location" class="form-control" required>
                        <div class="invalid-feedback">
                            Enter Location
                          </div>
                        <div class="valid-feedback">
                            Looks good!
                          </div>
                    </div>
                </div>
                <div class="mb-2">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" placeholder="Enter country" class="form-control" required>
                    <div class="invalid-feedback">
                        Enter Country
                      </div>
                    <div class="valid-feedback">
                        Looks good!
                      </div>
                </div>
                <button class="btn-show">Add</button>
            </form>
        </div>
    </div>

