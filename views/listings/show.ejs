<%- layout("layouts/boilerplate.ejs") %>
<div class="new">
    <!-- <div class="head-show"> -->
        <img src="<%= listing.image %>" class="form-img" alt="...">
    <!-- </div> -->
    <div class="card-body-show">
        <h2 class="head"><%= listing.title %></h2>
        <br>
        <p class="card-text"><b> About:</b> <%= listing.description %></p>
        <b>Price:</b> &#8377;<%=  listing.price.toLocaleString("en-IN") %><br>
        <b>Location:</b> <%= listing.location %><br>
        <b>Country</b> <%= listing.country %>
        <br>
        <div class="show-inner">
            <!-- <a href="/listings/<%= listing._id %>/edit"></a> -->
            <button  class="btn-show" >
                <a href="/listings/<%= listing._id %>/edit">
                    Edit
                </a> 
            </button>
               
            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn-show delete">
                    <a>
                        delete
                    </a>
                </button>
            </form>
        </div>
    </div>

    <div class="review">
        <br><br>
        <h4>Leave a Review</h4>
        <form class="mb-3" action="/listings/<%= listing.id %>/reviews">
            <div class="mb-3 mt-3">
                <label for="rating">Rating</label>
                <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]">
            </div>
            <div class="mb-3 mt-3">
                <label class="form-control" for="comment">Comments</label>
                <textarea name="review[rating]" id="comment"  rows="5"></textarea>
            </div>
            <button class="btn-show">Sumit</button>
        </form>
    </div>
</div>
