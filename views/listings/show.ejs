<%- layout("layouts/boilerplate.ejs") %>
<div class="new">
    <div class="head-show">
        <img src="<%= listing.image %>" class="card-img-top form-img" alt="...">
    </div>
    <div class="card-body-show">
        <h2 class="head"><%= listing.title %></h2>
        <br>
        <p class="card-text"><b> About:</b> <%= listing.description %></p>
        <b>Price:</b> &#8377;<%=  listing.price.toLocaleString("en-IN") %><br>
        <b>Location:</b> <%= listing.location %><br>
        <b>Country</b> <%= listing.country %>
        <br>
        <div class="show-inner">
            <h3> <a href="/listings/<%= listing._id %>/edit">
                <button class="btn btn-dark">Edit</button> </a></h3>
            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark">
                    delete
                </button>
            </form>
        </div>
    </div>
</div>
<br><br>

